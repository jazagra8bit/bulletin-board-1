<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

    <hr>

  </div>
</div>

<hr>

<h2>Add a new post </h2>

<form action="/insert_post" method="post">
  <div>
    <label for="title_field">Title</label>
    <input id="title_field" type="text" name="title">
  </div>

  <div>
    <label for="body_field">Body</label>
    <textarea name="body" id="body_field" cols="30" rows="10"></textarea>
  </div>

  <div>
    <label for="expires_on_field">Expires on</label>
    <input id="expires_on_field" type="date" name="expires_on">
  </div>

    <div>
    <label for="board_field">Board ID</label>
    <input id="board_field" type="text" name="board_id" value="<%= @the_board.id %>">
  </div>

  <button>
    Add post
  </button>
</form>

<h2>Active posts</h2>

<% matching_posts = Post.where({ :board_id => @the_board.id }).order({ :expires_on => :asc})%>

<table>
<% matching_posts.each do |a_post| %>
  <tr>
    <th><%=a_post.title%></th>
    <th><%=a_post.body%></th>
    <th><%=a_post.created_at%></th>
    <th><%=a_post.expires_on%></th>
  </tr>
<% end %>

</table>
